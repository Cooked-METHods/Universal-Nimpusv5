local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local Heading = Instance.new("TextLabel")
local Button = Instance.new("TextButton")
local Status = Instance.new("TextLabel")
local CloseButton = Instance.new("TextButton")
local MinimizedButton = Instance.new("TextButton")
local UICorner = Instance.new("UICorner")
local UIStroke = Instance.new("UIStroke")
local BGImage = Instance.new("ImageLabel")
local GlowEffect = Instance.new("ImageLabel")
local Subtitle = Instance.new("TextLabel")

-- Parent to PlayerGui
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Frame setup
Frame.Parent = ScreenGui
Frame.Size = UDim2.new(0, 350, 0, 250)
Frame.Position = UDim2.new(0.5, -175, 0.5, -125)
Frame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
Frame.Active = true
Frame.Draggable = true

-- UI Styling
UICorner.Parent = Frame
UICorner.CornerRadius = UDim.new(0, 15)
UIStroke.Parent = Frame
UIStroke.Thickness = 6 -- Thick black border
UIStroke.Color = Color3.fromRGB(0, 0, 0)

-- Background Image
BGImage.Parent = Frame
BGImage.Size = UDim2.new(1, 0, 1, 0)
BGImage.Image = "rbxassetid://YOUR_IMAGE_ID"
BGImage.ImageTransparency = 0.2

-- Glow Effect
GlowEffect.Parent = Frame
GlowEffect.Size = UDim2.new(1.2, 0, 1.2, 0)
GlowEffect.Position = UDim2.new(-0.1, 0, -0.1, 0)
GlowEffect.Image = "rbxassetid://YOUR_GLOW_IMAGE_ID"
GlowEffect.ImageTransparency = 0.5

-- Heading setup
Heading.Parent = Frame
Heading.Size = UDim2.new(1, 0, 0, 40)
Heading.BackgroundColor3 = Color3.fromRGB(0, 255, 255)
Heading.Text = "NimpusV5"
Heading.TextColor3 = Color3.fromRGB(0, 0, 0)
Heading.Font = Enum.Font.GothamBold
Heading.TextSize = 26
Heading.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
Heading.TextStrokeTransparency = 0 -- Black text border

-- Subtitle
Subtitle.Parent = Frame
Subtitle.Size = UDim2.new(1, 0, 0, 20)
Subtitle.Position = UDim2.new(0, 0, 0, 45)
Subtitle.Text = "The Ultimate Trade Tool!"
Subtitle.TextColor3 = Color3.fromRGB(255, 255, 255)
Subtitle.Font = Enum.Font.GothamSemibold
Subtitle.TextSize = 18
Subtitle.TextTransparency = 0.3
Subtitle.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
Subtitle.TextStrokeTransparency = 0 -- Black text border

-- Close button setup
CloseButton.Parent = Heading
CloseButton.Size = UDim2.new(0, 30, 0, 30)
CloseButton.Position = UDim2.new(1, -35, 0, 5)
CloseButton.BackgroundColor3 = Color3.fromRGB(255, 50, 50)
CloseButton.Text = "X"
CloseButton.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseButton.Font = Enum.Font.GothamBold
CloseButton.TextSize = 20

-- Minimized button setup
MinimizedButton.Parent = ScreenGui
MinimizedButton.Size = UDim2.new(0, 60, 0, 30)
MinimizedButton.Position = UDim2.new(0, 10, 0, 10)
MinimizedButton.BackgroundColor3 = Color3.fromRGB(0, 255, 255)
MinimizedButton.Text = "NV5"
MinimizedButton.TextColor3 = Color3.fromRGB(0, 0, 0)
MinimizedButton.Font = Enum.Font.GothamBold
MinimizedButton.TextSize = 16
MinimizedButton.Visible = false

-- Button setup
Button.Parent = Frame
Button.Size = UDim2.new(0, 60, 0, 30)
Button.Position = UDim2.new(0, 10, 0, 80)
Button.BackgroundColor3 = Color3.fromRGB(255, 0, 0)
Button.Text = ""

-- Status text
Status.Parent = Frame
Status.Size = UDim2.new(1, 0, 0, 30)
Status.Position = UDim2.new(0, 0, 0, 130)
Status.Text = "Trade Scam Off!"
Status.TextColor3 = Color3.fromRGB(255, 255, 255)
Status.Font = Enum.Font.GothamBold
Status.TextSize = 22
Status.TextWrapped = true
Status.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
Status.TextStrokeTransparency = 0 -- Black text border

-- Toggle functionality
local isOn = false
local TweenService = game:GetService("TweenService")
local TweenInfoSlide = TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)

Button.MouseButton1Click:Connect(function()
    isOn = not isOn
    local targetPosition = isOn and UDim2.new(0, 250, 0, 80) or UDim2.new(0, 10, 0, 80)
    local targetColor = isOn and Color3.fromRGB(0, 255, 0) or Color3.fromRGB(255, 0, 0)
    local targetText = isOn and "Trade Scam On!" or "Trade Scam Off!"
    
    local Tween = TweenService:Create(Button, TweenInfoSlide, {Position = targetPosition, BackgroundColor3 = targetColor})
    Tween:Play()
    
    Status.Text = targetText
end)

-- Close button functionality (minimizes GUI)
CloseButton.MouseButton1Click:Connect(function()
    Frame.Visible = false
    MinimizedButton.Visible = true
end)

-- Minimized button functionality (restores GUI)
MinimizedButton.MouseButton1Click:Connect(function()
    Frame.Visible = true
    MinimizedButton.Visible = false
end)
